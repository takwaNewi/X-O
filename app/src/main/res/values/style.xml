<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorPrimaryDark">@color/background_dark</item>
        <item name="colorAccent">@color/neon_pink</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="NeonText">
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:shadowColor">@color/neon_blue</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NeonButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/neon_button_bg</item>
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GridButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">6dp</item>

        <!-- Fond de la case utilisant le style néon que nous avons créé -->
        <item name="android:background">@drawable/style_case_neon</item>

        <!-- Taille du texte augmentée pour une meilleure visibilité -->
        <item name="android:textSize">60sp</item>

        <!-- La couleur du texte sera définie dynamiquement en Java, mais on peut mettre une couleur par défaut -->
        <item name="android:textColor">@color/white</item>

        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="FloatingCard">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:elevation">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>