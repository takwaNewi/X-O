<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche 1: La lueur extérieure (une forme plus grande et semi-transparente) --><item>
    <shape android:shape="rectangle">
        <!-- La couleur de la lueur. #33 est le code pour ~20% de transparence -->
        <solid android:color="#3300C2FF" />
        <corners android:radius="15dp" />
    </shape>
</item>

    <!-- Couche 2: La bordure et le fond de la case -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <!-- Fond de la case. Utilise le même fond que l'écran pour un effet "creusé" -->
            <solid android:color="@color/background_dark"/>
            <!-- La bordure nette -->
            <stroke android:width="2dp" android:color="@color/neon_blue" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
